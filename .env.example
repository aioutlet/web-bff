# Server Configuration
NODE_ENV=development
PORT=3100
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service URLs
PRODUCT_SERVICE_URL=http://localhost:8003
INVENTORY_SERVICE_URL=http://localhost:8004
REVIEW_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3000
CART_SERVICE_URL=http://localhost:8006
ORDER_SERVICE_URL=http://localhost:5001

# Service Timeouts (milliseconds)
SERVICE_TIMEOUT=5000
SERVICE_RETRY_COUNT=3
SERVICE_RETRY_DELAY=1000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/web-bff.log

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
