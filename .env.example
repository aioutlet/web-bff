# Server Configuration
NODE_ENV=development
PORT=3100
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service URLs
PRODUCT_SERVICE_URL=http://localhost:8000
INVENTORY_SERVICE_URL=http://localhost:5000
REVIEW_SERVICE_URL=http://localhost:9001
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
CART_SERVICE_URL=http://localhost:8006
ORDER_SERVICE_URL=http://localhost:5001
ADMIN_SERVICE_URL=http://localhost:3010

# Service Health Check URLs (for dependency monitoring)
PRODUCT_SERVICE_HEALTH_URL=http://localhost:8000/health
INVENTORY_SERVICE_HEALTH_URL=http://localhost:5000/health
REVIEW_SERVICE_HEALTH_URL=http://localhost:9001/health
AUTH_SERVICE_HEALTH_URL=http://localhost:3001/health
USER_SERVICE_HEALTH_URL=http://localhost:3002/health
CART_SERVICE_HEALTH_URL=http://localhost:8006/health
ORDER_SERVICE_HEALTH_URL=http://localhost:5001/health
ADMIN_SERVICE_HEALTH_URL=http://localhost:3010/health

# Service Timeouts (milliseconds)
SERVICE_TIMEOUT=5000
SERVICE_RETRY_COUNT=3
SERVICE_RETRY_DELAY=1000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/web-bff.log

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
