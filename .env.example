# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3100
HOST=0.0.0.0

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:9999

# =============================================================================
# Dapr Configuration
# =============================================================================
DAPR_HOST=localhost
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_APP_ID=web-bff-service
DAPR_PUBSUB_NAME=web-bff-pubsub



# Service App IDs (for Dapr service invocation)
PRODUCT_SERVICE_APP_ID=product-service
INVENTORY_SERVICE_APP_ID=inventory-service
REVIEW_SERVICE_APP_ID=review-service
AUTH_SERVICE_APP_ID=auth-service
USER_SERVICE_APP_ID=user-service
CART_SERVICE_APP_ID=cart-service
ORDER_SERVICE_APP_ID=order-service
ADMIN_SERVICE_APP_ID=admin-service

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/web-bff.log
