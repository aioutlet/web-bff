{
  "name": "web-bff",
  "version": "1.0.0",
  "description": "Backend for Frontend (BFF) service for web UI - aggregates data from multiple microservices",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "dapr run --app-id web-bff --app-port 1013 --dapr-http-port 3513 --dapr-grpc-port 50013 --log-level warn --config ./.dapr/config.yaml -- node dist/server.js",
    "dev": "dapr run --app-id web-bff --app-port 1013 --dapr-http-port 3513 --dapr-grpc-port 50013 --log-level warn --config ./.dapr/config.yaml -- npx tsx watch src/server.ts",
    "debug": "dapr run --app-id web-bff --app-port 1013 --dapr-http-port 3513 --dapr-grpc-port 50013 --log-level warn --config ./.dapr/config.yaml -- npx tsx --inspect=9229 src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "bff",
    "api-gateway",
    "aggregation",
    "express",
    "typescript"
  ],
  "author": "xshopai",
  "license": "MIT",
  "dependencies": {
    "@dapr/dapr": "^3.5.0",
    "@types/colors": "^1.1.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
